{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es2018",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "resolveJsonModule": false,
    "paths": {
      "*": ["node_modules/*"],
      "@app/*": ["src/app/*"],
      "@library/*": ["src/library/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["src/**/*.test.ts", "output/**/*", "dictionaries/**/*"]
}
